# API Keys
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=competitor_analysis

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Settings
APP_NAME=Competitor Analysis System
APP_VERSION=1.0.0
DEBUG_MODE=False
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Analysis Settings
MAX_COMPETITORS_PER_ANALYSIS=20
MAX_PARALLEL_AGENTS=5
ANALYSIS_TIMEOUT_SECONDS=14400  # 4 hours
DATA_CACHE_TTL_SECONDS=3600  # 1 hour

# Tavily Settings
TAVILY_DEMO_MODE=True  # Set to True to use mock data instead of real API
TAVILY_MAX_RESULTS=10
TAVILY_SEARCH_DEPTH=advanced
TAVILY_INCLUDE_DOMAINS=[]
TAVILY_EXCLUDE_DOMAINS=[]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=100

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24